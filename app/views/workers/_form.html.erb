    <%= rate_fields.text_field :punctuality %>
  </div><div class="field">
    <%= rate_fields.label :cleanliness %><br>
    <%= rate_fields.text_field :cleanliness %>
  </div><div class="field">
    <%= rate_fields.label :dealing %><br>
    <%= rate_fields.text_field :dealing %>
