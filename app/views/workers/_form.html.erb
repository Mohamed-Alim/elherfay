    <%= f.label :telephone %><br>
    <%= f.number_field :telephone %>
  </div>
  <div class="field">
    <%= f.label :availability %><br>
    <%= f.check_box :availability %>
  </div>
  <div class="field">
    <%= f.label :availability_comment %><br>
    <%= f.text_field :avcomment %>
  </div>
  <div class="field">
    <%= f.label :total_average %><br>
    <%= f.text_field :totalavg %>
  </div>
  
  
   <%= f.fields_for :rates  do |rate_fields| %>
   <div class="field">
    <%= rate_fields.label :price %><br>
    <%= rate_fields.text_field :price %>
  </div>
