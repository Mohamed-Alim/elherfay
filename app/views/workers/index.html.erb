<div class="container-fluid">
<h1>قائمة الفنيين</h1>
<% @workers.each do |worker| %>

	<div class="well">
		<div class="col-sm-6 col-lg-3">
			<h2> تقييم السعر   : <%= worker.average_price %></h2>
      		<h2> تقييم الجوده  : <%= worker.average_quality %></h2>
      		<h2> تقييم الانضباط : <%= worker.average_punctuality %></h2>
      		<h2> تقييم التعامل : <%= worker.average_dealing %></h2>
     	 	<h2> تقييم النظافه : <%= worker.average_cleanliness %></h2>
		</div>
		<div class:"col-sm-6 col-lg-3">
			<h2><%= worker.worker_type%> : <%= worker.name %></h2>
      		<h2>  التليفون : <%= worker.telephone %></h2>
      		<% if worker.availability?%>
      		
      		
      		<h2>  متاح  : نعم,<%= worker.avcomment%></h2>
      		<%else%>
      		<h2>  متاح  : لا,<%= worker.avcomment%></h2>

      		<%end%>
     		<h2> المنطقه : <%= worker.region %></h2>

     	 </div>
     
     	      
	
		<%= link_to 'Show', worker %>
		<%if signed_in?%>
        	<%= link_to 'Edit', edit_worker_path(worker) %>
        	<%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %>
           
      	<%end%>
         <%= link_to 'Evaluate', new_worker_rate_path(worker) %>
      </div>

<%end%>
</div>
